                            <table class='table table-striped table-bordered table-hover' id="tblExport">
                                <thead class="table-head">

                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.EmisorRfc)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.EmisorRazSocial)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.EmisorEstatus)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.EmisorRegFiscal)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.EmisorCorreo)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.EmisorCodPostal)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Any())
                                    {
                                        int i = 1;
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.EmisorRfc)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.EmisorRazSocial)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.EmisorEstatus)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.EmisorRegFiscal)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.EmisorCorreo)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.EmisorCodPostal)
